<h1 class="text-2xl font-bold mb-4">Hospitals</h1>

<!-- Create Hospital Button -->
<button onclick="toggleForm()" class="bg-blue-600 text-white px-4 py-2 rounded mb-4">
  + Create Hospital
</button>

<!-- Hospital Creation Form (Initially Hidden) -->
<div id="hospitalForm" class="hidden mb-6 bg-gray-50 p-4 rounded shadow">
  <h2 class="text-xl font-semibold mb-3">Create Hospital</h2>
  <form action="/hospital/create" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Hospital Name" class="border p-2 rounded w-full" required />
    <input type="text" name="location" placeholder="Location" class="border p-2 rounded w-full" required />
    <input type="text" name="contactInfo" placeholder="Contact Info" class="border p-2 rounded w-full" required />
    <button type="submit" class="bg-teal-700 text-white px-4 py-2 rounded">Add Hospital</button>
  </form>
</div>

<!-- Hospital Table -->
<h2 class="text-xl font-semibold mt-6 mb-2">Hospital List</h2>
<table class="min-w-full border-collapse border border-gray-300 text-sm">
  <thead class="bg-gray-200 text-gray-700">
    <tr>
      <th class="border p-2">Name</th>
      <th class="border p-2">Location</th>
      <th class="border p-2">Contact</th>
    </tr>
  </thead>
  <tbody>
    <% hospitals.forEach(hospital => { %>
      <tr class="bg-white hover:bg-gray-50">
        <td class="border p-2"><%= hospital.name %></td>
        <td class="border p-2"><%= hospital.location %></td>
        <td class="border p-2"><%= hospital.contactInfo %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<!-- Simple Script to Toggle Form -->
<script>
  function toggleForm() {
    const form = document.getElementById('hospitalForm');
    form.classList.toggle('hidden');
  }
</script>
